apiVersion: apps/v1
kind: Deployment
metadata:
  name: worker-$WORKER
spec:
  replicas: $MIN_REPLICAS
  selector:
    matchLabels:
      app: worker-$WORKER
  template:
    metadata:
      labels:
        app: worker-$WORKER
    spec:
      containers:
      - image: 194396987458.dkr.ecr.us-east-1.amazonaws.com/dreamwidth/worker:latest
        name: worker-$WORKER
        command: ["bash"]
        args: ["/opt/startup-prod.sh", "bin/worker/$WORKER"]
        resources:
          requests:
            cpu: $CPU_REQUEST
            memory: $MEMORY_REQUEST
        volumeMounts:
        - name: config
          mountPath: /dw/etc
          readOnly: true
      volumes:
      - name: config
        secret:
          secretName: dw-config
---
apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: worker-$WORKER
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: worker-$WORKER
  minReplicas: $MIN_REPLICAS
  maxReplicas: $MAX_REPLICAS
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: $TARGET_UTILIZATION
